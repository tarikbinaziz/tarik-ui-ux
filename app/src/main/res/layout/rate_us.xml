<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ratescreen">

    <TextView
        android:id="@+id/sharetxtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:text="Share your experience"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RatingBar
        android:id="@+id/ratingBarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:progressTint="#E91E63"
        android:rating="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharetxtid" />

    <EditText
        android:id="@+id/edit_expId"
        android:layout_width="0dp"
        android:layout_margin="20dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBarId"
        android:background="@drawable/et_box"
        android:hint="@string/write_your_experience"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="307dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_btbId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:text="submit"
        app:layout_constraintTop_toBottomOf="@id/edit_expId"
        tools:layout_editor_absoluteX="161dp"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteY="424dp" />


</androidx.constraintlayout.widget.ConstraintLayout>